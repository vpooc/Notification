<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vpooc.notification.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_notifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发通知" />

    <Button
        android:layout_below="@+id/btn_notifi"
        android:id="@+id/btn_clean_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除通知" />

    <Button
        android:layout_below="@+id/btn_clean_notify"
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击下载" />
    <Button
        android:layout_below="@+id/btn_download"
        android:id="@+id/btn_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送进度通知" />
    <Button
        android:layout_below="@+id/btn_progress"
        android:id="@+id/btn_self_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送自定义通知" />

</RelativeLayout>
